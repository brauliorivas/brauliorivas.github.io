    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/TextPlugin.min.js"></script>
    <script>
      gsap.registerPlugin(TextPlugin);

      const title = document.getElementById("title");
      const header = document.querySelector("header");

      let headerWidth = header.clientWidth;

      document.addEventListener("resize", () => {
        headerWidth = headerWidth.clientWidth;
      });

      let lastTimestamp = 0;

      const rate = 0.5;

      function newPadding() {
        console.log(title.style);
        const lastPadding = title.style.paddingLeft;
        const newPadding = lastPadding + rate;
      }

      function animateTitle(timeStamp) {
        const delta = timeStamp - lastTimestamp;
        const deltaInMiliseconds = delta / 1000;
        lastTimestamp = timeStamp;

        const leftPadding = newPadding();
        console.log(leftPadding);

        gsap.to(title, {
          paddingLeft: `${newPadding()}px`,
          duration: deltaInMiliseconds,
        });

        requestAnimationFrame(animateTitle);
      }

      requestAnimationFrame(animateTitle);
    </script>
